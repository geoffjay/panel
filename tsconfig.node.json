{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "~root": [
        "./src"
      ],
      "~root/*": [
        "./src/*"
      ],
      "~components": [
        "./src/components"
      ],
      "~components/*": [
        "./src/components/*"
      ],
      "~features": [
        "./src/features"
      ],
      "~features/*": [
        "./src/features/*"
      ],
      "~lib": [
        "./src/lib"
      ],
      "~lib/*": [
        "./src/lib/*"
      ],
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "vite.config.ts"
  ]
}
